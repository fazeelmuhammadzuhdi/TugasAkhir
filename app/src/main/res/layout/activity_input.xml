<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text=" Input Nilai Mahasiswa"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <EditText
        android:id="@+id/tugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Inputkan Nilai Tugas  "
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/uts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tugas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Masukkan Nilai UTS"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/uas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Masukkan Nilai UAS"
        android:inputType="number"
        android:minHeight="48dp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/uas"
        >

    </LinearLayout>

    <TextView
        android:id="@+id/totalnilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:layout_below="@id/ll1"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalnilai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Nilai Dalam Bentuk Huruf"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btntotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="hasil"
        android:text="Total Nilai"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bersih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btntotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="bersih"
        android:text="Bersihkan"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>



